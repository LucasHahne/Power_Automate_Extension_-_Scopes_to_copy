{
  "manifest_version": 3,
  "name": "Power Automate Extension - Scopes to Copy",
  "version": "1.1.0.7",
  "action": {
    "default_title": "Power Automate Scopes"
  },
  "permissions": ["storage", "tabs", "sidePanel"],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://make.powerautomate.com/*"],
      "js": ["src/content/contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
